<% if current_user.is_member?(project) %>
  <%= form_for(current_user.works.find_by(project_id: project.id), html: {method: :delete }) do |f| %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :project_id, project.id %>
    <%= f.submit 'Leave', class: 'btn btn-default btn-danger' %>
  <% end %>
<% else %>
  <%= form_for(Work.new, html: {method: :post }) do |f| %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :project_id, project.id %>
    <%= f.submit 'Leave', class: 'btn btn-default btn-danger' %>
  <% end %>
<% end %>